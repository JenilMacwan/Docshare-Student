
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:paddingBottom="16dp"
    tools:context=".ui.aboutus.AboutusFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- App Description Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#E0F2F1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="82dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:src="@mipmap/ic_launcher"
                        android:scaleType="fitCenter"
                        android:contentDescription="app_logo" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DocuShare is a platform designed to facilitate seamless document sharing and collaboration between students and faculty. It aims to streamline the exchange of academic materials, assignments, and resources, enhancing the learning and teaching experience."
                        android:textColor="#333333"
                        android:textSize="18sp"
                        android:textStyle="italic"
                        android:gravity="center"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- College Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#E0F2F1"> <!-- Teal-tinted background -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">  <!--Add padding to the layout-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/college_logo"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/college_logo_bg"
                            android:scaleType="fitCenter"
                            android:contentDescription="college_logo"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Affiliated College: VIDUSH SOMANY INSTITUE OF TECHNOLOGY AND RESEARCH"
                            android:textColor="#00796B"
                            android:textSize="18sp"
                            android:textStyle="italic"/>

                    </LinearLayout>

                    <!-- College Description Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#E0F2F1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:text="Vidush Somany Institute of Technology and Research (VSITR) is a leading engineering college known for its academic excellence and research-driven environment. VSITR is committed to providing quality education and preparing students for successful careers in technology."
                            android:textColor="#333333"
                            android:textSize="16sp" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Our Team Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="#E0F2F1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Our Team"
                        android:textColor="#444444"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"/>

                    <!-- Student List (using LinearLayout) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Repeatable Student Item -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#FFFFFF">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:id="@+id/student_name_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Student Name: Goswami Parth"
                                    android:textColor="#212121"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:gravity="center"/>

                                <TextView
                                    android:id="@+id/student_id_1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Student ID: 223SBECE54009"
                                    android:textColor="#666666"
                                    android:textSize="14sp"
                                    android:gravity="center"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Student 2 -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#FFFFFF">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:id="@+id/student_name_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Student Name: Macwan Chrish"
                                    android:textColor="#212121"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:gravity="center"/>

                                <TextView
                                    android:id="@+id/student_id_2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Student ID: 223SBECE54013"
                                    android:textColor="#666666"
                                    android:textSize="14sp"
                                    android:gravity="center"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Student 3 -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="8dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#FFFFFF">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:id="@+id/student_name_3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Student Name: Macwan Jenil"
                                    android:textColor="#212121"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:gravity="center"/>

                                <TextView
                                    android:id="@+id/student_id_3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Student ID: 223SBECE54014"
                                    android:textColor="#666666"
                                    android:textSize="14sp"
                                    android:gravity="center"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Student 4 -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="8dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#FFFFFF">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:id="@+id/student_name_4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Student Name: Mehta Dhimahi"
                                    android:textColor="#212121"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:gravity="center"/>

                                <TextView
                                    android:id="@+id/student_id_4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Student ID: 223SBECE54015"
                                    android:textColor="#666666"
                                    android:textSize="14sp"
                                    android:gravity="center"/>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </LinearLayout>

</ScrollView>